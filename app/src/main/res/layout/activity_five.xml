<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FourActivity">

    <ImageView
        android:id="@+id/minew"
        android:layout_width="391dp"
        android:layout_height="235dp"
        android:layout_gravity="top"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/todo"
        android:foregroundGravity="top"
        android:src="@drawable/merge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/manu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/go5"
        android:layout_below="@id/minew">
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDD99"
            android:gravity="bottom"
            android:text="@string/merge_sort"
            android:textColor="#00897B"
            android:textSize="18sp"
            android:textStyle="bold|italic" />
    </ScrollView>
    <Button
        android:id="@+id/link5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/click_to_know_more"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:gravity="center|center_horizontal|center_vertical"
        android:textStyle="bold"
        android:background="#006666"/>

    <EditText
        android:id="@+id/num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/link5"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:hint="@string/check_for_prime_number"
        android:inputType="number" />

    <Button
        android:id="@+id/go5"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/link5"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/num5"
        android:layout_toRightOf="@+id/num5"
        android:layout_alignBaseline="@id/num5"
        android:background="#99AAff"
        android:text="@string/_check"
        android:textStyle="bold"
        android:layout_alignParentEnd="true" />
</RelativeLayout>